import java.util.Scanner;

public class ATMSimulation {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Enter the amount to dispense: ");
        int amount = scanner.nextInt();
        
        if (amount < 0) {
            System.out.println("Invalid amount. Please enter a non-negative integer.");
            return;
        }
        
        // Denominations in descending order
        int[] denominations = {100, 50, 10, 5, 2, 1};
        int[] notes = new int[denominations.length];
        
        // Calculate the number of notes for each denomination
        for (int i = 0; i < denominations.length; i++) {
            notes[i] = amount / denominations[i];
            amount %= denominations[i];
        }
        
        // Display the results
        System.out.println("Dispensation breakdown:");
        int totalNotes = 0;
        for (int i = 0; i < denominations.length; i++) {
            if (notes[i] > 0) {
                System.out.println(notes[i] + " x " + denominations[i]);
                totalNotes += notes[i];
            }
        }
        System.out.println("Total notes: " + totalNotes);
        
        scanner.close();
    }
}
